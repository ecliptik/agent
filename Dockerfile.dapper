FROM ecliptik/golang:armhf-1.8-stretch
RUN apt-get update && \
    apt-get install -y uuid-runtime iptables
RUN go get github.com/rancher/trash
RUN go get github.com/golang/lint/golint
ARG DOCKER_VERSION=17.09.0-ce
RUN curl -sfL https://download.docker.com/linux/static/stable/armhf/docker-${DOCKER_VERSION}.tgz | tar xzf - -C /usr/bin --strip-components=1;
ENV PATH /go/bin:$PATH
ENV DAPPER_SOURCE /go/src/github.com/rancher/agent
ENV DAPPER_OUTPUT bin dist
ENV DAPPER_ENV TAG REPO CROSS
ENV DAPPER_RUN_ARGS --privileged
ENV DAPPER_DOCKER_SOCKET true
ENV GO15VENDOREXPERIMENT 1
ENV TRASH_CACHE ${DAPPER_SOURCE}/.trash-cache
WORKDIR ${DAPPER_SOURCE}

VOLUME "/var/lib/docker"
ENTRYPOINT ["./scripts/entry"]
CMD ["ci"]
